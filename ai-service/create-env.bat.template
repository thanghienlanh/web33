@echo off
echo Creating .env file with API keys...
echo.
echo Please get your API keys from:
echo - xAI: https://platform.x.ai/
echo - OpenAI: https://platform.openai.com/api-keys
echo.

set /p XAI_API_KEY="Enter your xAI API Key: "
set /p GROK_API_KEY="Enter your Grok API Key (same as xAI): "
set /p OPENAI_API_KEY="Enter your OpenAI API Key (optional): "

(
echo # Grok API Key (xAI)
echo XAI_API_KEY=%XAI_API_KEY%
echo.
echo # Hoac dung ten nay (ca 2 deu duoc)
echo GROK_API_KEY=%GROK_API_KEY%
echo.
if "%OPENAI_API_KEY%" neq "" (
    echo # OpenAI API Key (Optional - neu muon dung DALL-E)
    echo OPENAI_API_KEY=%OPENAI_API_KEY%
) else (
    echo # OpenAI API Key (Optional - neu muon dung DALL-E)
    echo # OPENAI_API_KEY=sk-...
)
) > .env

echo.
echo Done! File .env has been created.
echo.
echo Now restart AI service:
echo   python main.py
echo.
pause
